{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist"
  },
  "atom": {
    "rewriteTsconfig": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/main.d.ts"
  ],
  "files": [
    "src/base.ts",
    "src/card.ts",
    "src/objects.ts",
    "src/pagarme.ts",
    "src/plan.ts",
    "src/transaction.ts",
    "typings/main.d.ts"
  ]
}
